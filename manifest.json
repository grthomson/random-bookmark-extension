{
  "name": "Random Bookmark Launcher",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Opens a random bookmark on Chrome startup.",
  "permissions": ["bookmarks"],
  "background": { "service_worker": "background.js", "type": "module" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Random Bookmark",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  }
}
